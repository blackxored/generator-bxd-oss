{
  "name": "<%= moduleName %>",
  "version": "0.0.0-development",
  "description": "<%= description %>",
  "author": "<%= author %>",
  "main": "lib/index.js",
  "module": "es/index.js",
  "engines": {
    "node": "> 4",
    "npm": "> 3"
  },
  "files": [
    "es",
    "lib",
    "dist"
  ],
  "scripts": {
    "start": "webpack",
    "prebuild": "npm run clean",
    "clean": "npm-run-all --parallel clean:*",
    "build": "npm-run-all --parallel build:*",
    "build:es":  "cross-env BABEL_ENV=es babel src -q -d es",
    "build:cjs": "cross-env BABEL_ENV=cjs babel src -q -d lib",
    "commit": "commit",
    "precommit": "lint-staged",
    "commitmsg": "commitlint -e $GIT_PARAMS",
    "flow": "flow",
    "lint": "eslint",
    "contributors:add": "all-contributors add",
    "contributors:generate": "all-contributors generate",
    "test": "jest",
    "prettier:js": "prettier --write --trailing-comma all --tab-width 2 --single-quote --parser flow --print-width 80 \"src/**/*.js\"",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post",
    <% if (umdBuild) { %>
    "build:umd": "webpack --output-filename <%- moduleName %>.js",
    "build:umd.min": "webpack -p --output-filename <%- moduleName %>.min.js",
    <% } %>
    <% if (umdBuild) { %>
      "clean:build": "rimraf dist es lib",
    <% } else { %>
      "clean:build": "rimraf es lib"
    <% } %>
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write --trailing-comma all --tab-width 2 --single-quote --parser flow --print-width 80",
      "git add",
      "jest --bail --findRelatedTests"
    ]
  },
  "config": {
    "commitzen": {
      "path": "@commitlint/prompt"
    }
  },
  "jest": {
    "testMatch": [
      "<rootDir>/src/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!**/node_modules/**",
      "!**/vendor/**"
    ]
  },
  "quokka": {
    "babel": true
  },
  "repository": {
    "url": "https://github.com/<%= username %>/<%= moduleName%>"
  },
  "dependencies": {
    "in-publish": "^2.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^5.2.5",
    "@commitlint/config-conventional": "^5.2.3",
    "all-contributors-cli": "^4.6.0",
    "babel-cli": "^6.0.0",
    "babel-core": "^6.0.0",
    "babel-eslint": "^7.2.3",
    "babel-preset-env": "^1.6.0",
    "babel-jest": "21.0.0",
    "commitizen": "^2.9.6",
    "cross-env": "^2.0.1",
    "eslint": "^4.6.1",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-config-prettier": "^2.4.0",
    "eslint-plugin-flowtype": "^2.35.1",
    "eslint-plugin-fp": "^2.3.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jest": "^21.0.0",
    "eslint-plugin-prettier": "^2.2.0",
    "flow-bin": "^0.58.0",
    "husky": "^0.14.3",
    "jest": "^21.2.1",
    "lint-staged": "^4.1.3",
    "npm-run-all": "^4.1.2",
    "prettier": "^1.8.1",
    <% if (umdBuild) { %>
    "babel-loader": "^7.1.2",
    "webpack": "^3.10.0",
    <% } %>
    "rimraf": "^2.6.2"
  }
}
